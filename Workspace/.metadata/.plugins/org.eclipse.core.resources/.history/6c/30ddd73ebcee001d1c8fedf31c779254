package com.mygdx.smallrts.gameElements;

import com.badlogic.gdx.Gdx;
import com.badlogic.gdx.graphics.Texture;
import com.badlogic.gdx.math.Rectangle;

public class BaseRootClass extends Rectangle {
		
	// Instance variables
	String team;
	Texture sprite;
	int goldGathered;	// gather 100 to win
	
	public BaseRootClass(String team) {
		this.team = team;
//		this.sprite = ???
		goldGathered = 0;
		
		this.sprite = new Texture(Gdx.files.internal("mine.png"));
		
	}
	

}
