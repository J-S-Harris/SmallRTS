package monsters;

import com.badlogic.gdx.Gdx;
import com.badlogic.gdx.graphics.Texture;

import levels.LevelManager;

public class MonsterWeakSlow extends MonsterBaseClass {

	public MonsterWeakSlow(LevelManager levelManager, float movementSpeed, int attackPower, int goldSteal, int movementDelay) {
		super(levelManager, movementSpeed, attackPower, goldSteal, movementDelay);
		// TODO Auto-generated constructor stub
	}

	public MonsterWeakSlow(LevelManager levelManager) {
		super(levelManager);

		this.movementSpeed = 6 + levelManager.getCurrentLevel();
		this.attackPower = 1;
		this.goldSteal = 5;
		this.movementDelay = 60;
		this.remainingHP = (int) (10 + Math.pow(levelManager.getCurrentLevel(), 2));
		this.weight = 3;
	}
}
